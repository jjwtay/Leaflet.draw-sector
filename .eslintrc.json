{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true  
        }
    },
    "rules": {
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-multi-spaces": "error",
        "no-use-before-define": "error",
        "no-var": "error",
        "no-whitespace-before-property": "error",
        "object-shorthand": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],

        "space-before-blocks": "error",
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "vars-on-top": "error"
    },
    "globals": {
        "L": true
    },
    "overrides": [
        {
            "files": "./src/*.js"
        }
    ]
}